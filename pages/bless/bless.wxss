.bless_wrap {
  width: 600rpx;
  margin:20rpx auto;
  position: relative;
  min-height:1055rpx;
}
.bless_bg {
  width: 650rpx;
  height: 1055rpx;
  position: absolute;
  z-index: -1;
  left: -25rpx;
  top:0;
}
button.send_bless {
  background: #ff85b5;
  border:none;
  width: 300rpx;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0;
  bottom: 20rpx;
  left: 50%;
  margin-left: -150rpx;
  margin-top:20rpx;
}
.bless {
  /* position: absolute;
